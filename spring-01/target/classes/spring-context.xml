<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="questionConfig" class="ru.otus.spring.dao.QuestionConfigCSV">
    </bean>

    <bean id="questionDao" class="ru.otus.spring.dao.QuestionDaoCSV">
        <constructor-arg name="resourceFile" value="test_questions.csv" type="java.lang.String"/>
        <constructor-arg name="questionConfig" ref="questionConfig"/>
    </bean>

    <bean id="questionService" class="ru.otus.spring.service.QuestionServiceImpl">
        <constructor-arg ref="questionDao"/>
    </bean>

</beans>
